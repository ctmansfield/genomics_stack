# lint-tuning-v1
# Repo-level filter: skip generated/third-party outputs.
exclude: >
  ^(
    risk_reports/out/|
    metabase_data/|
    build/|dist/|
    \.venv/|venv/|
    \.git/|
    \.ruff_cache/
  )

repos:
  - repo: https://github.com/astral-sh/ruff-pre-commit
    rev: v0.12.7
    hooks:
      - id: ruff
        args: ["--fix", "--config", "pyproject.ruff.toml"]
      - id: ruff-format
        args: ["--config", "pyproject.ruff.toml"]

  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v6.0.0
    hooks:
      - id: end-of-file-fixer
      - id: trailing-whitespace

  - repo: https://github.com/shellcheck-py/shellcheck-py
    rev: v0.11.0.1
    hooks:
      - id: shellcheck
        files: ^(scripts/|tools/|.*\.sh$)
        args: ["--severity=warning"]

  - repo: https://github.com/scop/pre-commit-shfmt
    rev: v3.12.0-2
    hooks:
      - id: shfmt
        files: ^(scripts/|tools/|.*\.sh$)
        args: ["-i", "2", "-ci"]
